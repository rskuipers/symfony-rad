{% extends 'base.html.twig' %}

{% block title %}Edit Chuckle{% endblock %}

{% block body %}
    {{ form_start(form, { action: path('app_chuckle_edit', { id: chuckle.id }) }) }}
    <div class="chuckle my-4">
        <div class="chuckle-author">
            <img src="https://i.pravatar.cc/150?u={{ chuckle.author.id }}" class="img-fluid rounded-circle"/>
        </div>
        <div class="chuckle-body">
            <p class="chuckle-message row align-items-center">
                <span class="col">
                    {{ form_widget(form.message) }}
                </span>

                <span class="col-auto">
                    <button class="btn btn-primary">Save</button>
                </span>
            </p>

            <div class="chuckle-footer">
                <time datetime="{{ chuckle.createdAt | date }}">{{ chuckle.createdAt | date('d-m-Y H:i:s') }}</time>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
